<button class="btn" style="float:right; padding-right: 0px;">
  <%= link_to("Add a course", new_admin_course_path, :class => "btn btn-outline-info") %>
</button>
<table class="table table-bordered">
  <tr>
    <td>
      <p>Course</p>
    </td>
    <td>
      <p>title</p>
    </td>
    <td>
      <p>price</p>
    </td>
    <td>
      <p>currency</p>
    </td>
    <td>
      <p>course_type</p>
    </td>
    <td>
      <p>is_available</p>
    </td>
    <td>
      <p>link</p>
    </td>
    <td>
      <p>description</p>
    </td>
    <td>
      <p>expiry_day</p>
    </td>
    <td>
      <p>created_at</p>
    </td>
    <td>
      <p>operation</p>
    </td>
  </tr>
  <% @courses.each do |course| %>
  <tr>
    <td>
      <%= course.id %>
    </td>
    <td>
      <%= course.title %>
    </td>
    <td>
      <%= course.price %>
    </td>
    <td>
      <%= course.currency %>
    </td>
    <td>
      <%= course.course_type %>
    </td>
    <td>
      <% if course.is_available %>
         online
      <% else %>
         offline
      <% end %>
    </td>
    <td>
      <%= course.link %>
    </td>
    <td>
      <%= course.description %>
    </td>
    <td>
      <%= course.expiry_day %>
    </td>
    <td>
      <%= course.created_at %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_course_path(course)) %> |
      <%= link_to("Destroy", admin_course_path(course), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
  <% end %>
</table>